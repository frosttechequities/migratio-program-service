# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/migratio_document_service

# Service Port
DOCUMENT_SERVICE_PORT=3005

# AWS S3 Configuration (for document storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region # e.g., us-east-1
S3_BUCKET_NAME=your_migratio_document_bucket_name

# OCR / Analysis Service Configuration (Optional)
# OCR_SERVICE_URL=http://localhost:xxxx # e.g., URL for AWS Textract endpoint or custom OCR service
DOCUMENT_ANALYSIS_SERVICE_URL=http://document-analysis:5002 # URL for the Document Analysis/Optimization Engine (Docker Service Name)

# Virus Scanning Configuration (Optional)
# CLAMAV_HOST=localhost
# CLAMAV_PORT=3310

# CORS Origin (API Gateway URL)
# CORS_ORIGIN=http://localhost:xxxx
